{
  "name": "api",
  "version": "1.0.0",
  "description": "DDD example with NestJS",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Cristian SÃ¡nchez Carretero",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "databases:build": "npm run api:database:build && npm run backoffice:database:build",
    "api:database:build": "npm run api:typeorm:migration:run && npm run api:typeorm:seed:run",
    "backoffice:database:build": "npm run backoffice:typeorm:migration:run",
    "docker:build": "docker-compose up -d",
    "docker:clean": "docker-compose down --rmi local --volumes --remove-orphans",
    "deps": "npm install",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "npm:check:updates": "ncu -i --format group",
    "prebuild": "rimraf ./artifacts/dist",
    "prepare": "husky install",
    "start": "export NODE_PATH=./artifacts/dist/src/ && npm run start:prod",
    "start:dev": "export $(cat .env | xargs) > /dev/null && nest start --watch",
    "api:start:dev": "export $(cat apps/api/.env | xargs) > /dev/null && nest start --watch",
    "backoffice:start:dev": "export $(cat apps/backoffice/.env | xargs) > /dev/null && nest start backoffice --watch",
    "start:dev:swc": "export $(cat .env | xargs) > /dev/null && nest start --path tsconfig.dev.json -b swc --type-check --watch",
    "test": "npm run test:acceptance && npm run test:integration && npm run test:unit",
    "test:sync": "npm run test:acceptance:sync && npm run test:integration:sync && npm run test:unit:sync",
    "test:acceptance": "jest --config test/config/jest/jest-acceptance.json",
    "test:acceptance:sync": "jest --config test/config/jest/jest-acceptance.json --runInBand --detectOpenHandles",
    "test:integration": "jest --config test/config/jest/jest-integration.json",
    "test:integration:sync": "jest --config test/config/jest/jest-integration.json --runInBand --detectOpenHandles",
    "test:unit": "jest --config test/config/jest/jest-unit.json",
    "test:unit:sync": "jest --config test/config/jest/jest-unit.json --runInBand --detectOpenHandles",
    "typeorm:migration:generate": "export $(cat .env | xargs) > /dev/null && npm run typeorm -- migration:generate artifacts/orm/migrations/$npm_config_name",
    "typeorm:migration:create": "typeorm migration:create artifacts/orm/migrations/$npm_config_name",
    "typeorm:migration:revert": "export $(cat .env | xargs) > /dev/null && npm run typeorm -- migration:revert",
    "api:typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d apps/api/src/config/orm/typeorm-migrations.config.ts",
    "api:typeorm:migration:run": "export $(cat apps/api/.env | xargs) > /dev/null && npm run api:typeorm -- migration:run",
    "api:typeorm:seed:run": "export $(cat apps/api/.env | xargs) > /dev/null && ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d apps/api/src/config/orm/typeorm-migrations.config.ts",
    "backoffice:typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d apps/backoffice/src/config/orm/typeorm-migrations.config.ts",
    "backoffice:typeorm:migration:run": "export $(cat apps/backoffice/.env | xargs) > /dev/null && npm run backoffice:typeorm -- migration:run"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "5.3.0",
    "@nestjs/common": "10.3.5",
    "@nestjs/core": "10.3.5",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/microservices": "10.3.7",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.5",
    "@nestjs/swagger": "7.3.0",
    "@nestjs/typeorm": "10.0.2",
    "amqp-connection-manager": "4.1.14",
    "amqplib": "0.10.4",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "compression": "1.7.4",
    "elliptic": "6.5.5",
    "express-rate-limit": "7.2.0",
    "fs-extra": "11.2.0",
    "generate-api-key": "1.0.2",
    "helmet": "7.1.0",
    "nestjs-pino": "4.0.0",
    "npm-check-updates": "16.14.17",
    "passport": "0.7.0",
    "passport-headerapikey": "1.2.2",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pg": "8.11.3",
    "pino-http": "9.0.0",
    "pino-pretty": "11.0.0",
    "reflect-metadata": "0.2.1",
    "response-time": "2.3.2",
    "rxjs": "7.8.1",
    "typeorm": "0.3.20",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.5",
    "@swc/cli": "0.3.10",
    "@swc/core": "1.4.8",
    "@swc/jest": "0.2.36",
    "@types/amqplib": "0.10.5",
    "@types/bcrypt": "5.0.2",
    "@types/compression": "1.7.5",
    "@types/elliptic": "6.4.18",
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.30",
    "@types/passport": "1.0.16",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/response-time": "2.3.8",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.8",
    "dotenv": "16.4.5",
    "eslint-config-codely": "3.1.3",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "mkdirp": "3.0.1",
    "rimraf": "5.0.5",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typeorm-extension": "3.5.0",
    "typescript": "5.4.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "jest": {
    "projects": [
      "test/config/jest/jest-unit.json",
      "test/config/jest/jest-acceptance.json",
      "test/config/jest/jest-integration.json"
    ]
  }
}